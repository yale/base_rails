source 'http://rubygems.org'

gem 'rails'
gem 'jquery-rails'
gem 'compass'
gem 'haml'
gem 'html5-boilerplate'
gem 'devise' # authentication
gem 'cancan' # authorization
gem 'will_paginate' # pagination
gem 'paperclip' # file attachments

group :development, :test do
  gem 'rspec-rails'
  gem 'sqlite3'
  gem 'sqlite3-ruby', :require => 'sqlite3'
  gem 'nifty-generators'
  gem 'watchr' # automated scripts, replaces autotest
  gem 'spork' # reduce spec run time
  gem 'turn' # nice test output
  gem 'mocha'
  gem 'timecop' # nice time handling for tests
  gem 'factory_girl'
end

group :production do
  gem 'mysql'
end
